@@ -286,7 +286,11 @@ void amdgpu_hmm_range_free(struct amdgpu_hmm_range *range)
 	if (!range)
 		return;
 
-	kvfree(range->hmm_range.hmm_pfns);
+	if (range->hmm_range.hmm_pfns) {
+		kvfree(range->hmm_range.hmm_pfns);
+		range->hmm_range.hmm_pfns = NULL;
+	}
+
 	amdgpu_bo_unref(&range->bo);
 	kfree(range);
 }
